<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <%= link_to "Home", root_path %>
  <%= link_to "About", about_path  %>
  <%= link_to "Posts", posts_path  %>
</div>

<div class="notice">
  <%= alert || notice %>
</div>
<%= yield %>

</body>
</html>
